@model IEnumerable<Tp4.Models.Student>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}
<div style="display: flex;justify-content:space-evenly; align-items:center;width:100% ">
    <h1> all Students on the data base </h1>
    
</div>
<hr/>
@{
    if (Model == null)
    {
        <h1>no student found !</h1>
    }
    else {
    foreach (Student p in Model)
    {
        <div class="text-bg-secondary mb-3">
                    <div class="card-header">
                        <h4>
                            ID :
                        </h4>
                @p.Id
                    </div>
                    <div class="card-body">
                        <h6>
                            First Name
                        </h6>
                @p.firstName

                        <h6>
                            Last Name
                        </h6>
                @p.lastName
                        <h6>
                            Phone Number
                        </h6>
                @p.phoneNumber

                        <h6>
                            university
                        </h6>
                @p.university
                        <h6>
                            timestamp
                        </h6>
                @p.timestamp
                        <h6>
                            course
                        </h6>
                @p.course
                    </div>
        </div>

    }
}
}